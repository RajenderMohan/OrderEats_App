<?xml version="1.0" encoding="utf-8"?>
<!-- Yeh shape button ke 'pressed' state ke liye hai -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient ko ulta kar diya gaya hai (gehra rang upar) -->
    <gradient
        android:angle="90"
        android:endColor="#FF6B6B"
        android:startColor="#D32F2F"
        android:type="linear" />

    <!-- Border thoda mota dikhega -->
    <stroke
        android:width="1.5dp"
        android:color="#A82828" />

    <corners android:radius="15dp" />
</shape>
