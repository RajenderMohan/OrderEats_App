<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AdminOrderEats" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.AdminOrderEats" parent="Base.Theme.AdminOrderEats" />

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#CCFFFFFF</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="hintTextColor">#FFFFFF</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="counterTextColor">@android:color/white</item>
    </style>

    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">#CCFFFFFF</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="hintTextColor">#FFFFFF</item>
        <item name="endIconTint">@android:color/white</item>
    </style>

    <style name="ActionCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ActionCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/action_card_background</item>
    </style>

    <style name="ActionCardIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ActionCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">#311B92</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>