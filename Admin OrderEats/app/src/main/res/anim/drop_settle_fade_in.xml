<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/decelerate_interpolator"
    android:fillAfter="true">

    <alpha
        android:fromAlpha="0.0"
        android:toAlpha="1.0"
        android:duration="600" />

    <translate
        android:fromYDelta="-30%p"
        android:toYDelta="0"
        android:duration="600" />

    <!-- Optional: Add a slight bounce effect using a second translate or by adjusting interpolator -->
    <!-- For a simple settle without explicit bounce, the above is often enough with decelerate. -->
    <!-- For a more pronounced bounce, you could use an overshoot_interpolator -->
    <!-- or chain another smaller translate animation. -->

</set>
